{
  "functions": {
    "landing-page/index.html": {
      "includeFiles": "landing-page/**"
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/landing-page/index.html"
    },
    {
      "source": "/citizen",
      "destination": "/citizen-portal/index.html"
    },
    {
      "source": "/citizen/(.*)",
      "destination": "/citizen-portal/$1"
    },
    {
      "source": "/admin",
      "destination": "/admin-dashboard/index.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/admin-dashboard/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}